{{> navigation currentView="employees" }}

<main>
	<section>
		<header class="header-row">
			<h1>Employees</h1>
			<button onClick="goToAddForm()" type="button">Add New <i class="fa fa-plus"></i></button>
		</header>

		{{#if successMessage}}
		{{> notification centered="true" type="success" message=successMessage}}
		{{/if}}

		{{#if errorMessage}}
		{{> notification centered="true" message=errorMessage}}
		{{/if}}
		
		<table>
			<thead>
				<tr>
					<th>ID</th>
					<th>First Name</th>
					<th>Last Name</th>
					<th>Email</th>
					<th>Job Title</th>
					<th>Start Date</th>
					<th>End Date</th>
					<th>Salary</th>
					<th class="col-table-button"></th>
					<th class="col-table-button"></th>
				</tr>
			</thead>
			<tbody>
				{{#each employees}}
				<tr {{#ifCond ../highlight "==" this.employeeID}}class="highlight"{{/ifCond}}>
					<td>{{ this.employeeID }}</td>
					<td>{{ this.firstName }}</td>
					<td>{{ this.lastName }}</td>
					<td>{{ this.email }}</td>
					<td>{{ this.jobTitle }}</td>
					<td>{{ this.startDate }}</td>
					<td>{{ this.endDate }}</td>
					<td>${{ this.salary }}</td>
					<td>
						<button onClick="goToEditForm({{ this.employeeID }})" class="table-button edit" type="button">
							<i class="fa fa-pen-to-square"></i>
						</button>
					</td>
					<td>
						<form method="DELETE" action="/employees/delete/{{ this.employeeID }}" class="form-delete">
							<input type="submit" class="table-button delete" value="" />
							<span class="icon-delete"><i class="fa fa-trash-can"></i></span>
						</form>
					</td>
				</tr>
				{{/each}}
			</tbody>
		</table>
	</section>
</main>

<script type="text/javascript" src="/js/employees.js"></script>
